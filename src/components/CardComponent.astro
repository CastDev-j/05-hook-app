---
interface Props {
  title: string;
  subtitle: string;
  color: {
    decoration: string;
    border: string;
    background: string;
  };
  description?: string;
}

const { title, subtitle, description = "", color } = Astro.props;

const { background, border, decoration } = color;
---

<section
  class={`${border} bg-white shadow-md rounded-lg p-4 relative border-l-4 sm:border-l-0 sm:border-b-4`}
>
  <!-- decoration square -->
  <div class={`absolute right-5 top-5 w-5 h-5 ${decoration} rounded-sm`}></div>
  <h2 class="text-lg font-bold text-gray-800">{title}</h2>
  <p class="text-base text-gray-600 mt-2">{subtitle}</p>
  <section class={`${background} p-4 mt-4 rounded-lg`}>
    <div
      class="flex flex-col items-center justify-center py-12 px-4 text-center rounded-md bg-white relative"
    >
      <slot />
    </div>
  </section>
  <p class="text-sm text-gray-500 mt-4 px-4">{description}</p>
</section>

<style>
  h2::after {
    content: "";
    position: absolute;
    margin-left: 10px;
    margin-top: 5px;
    width: 20px;
    height: 20px;
    border-radius: 5px;
  }
</style>
